<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin" >

    <Switch
        android:id="@+id/switch_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_on_off_sound"
        android:textSize="@dimen/txt_size_normall" />

    <Switch
        android:id="@+id/switch_vibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normall"
        android:text="@string/txt_on_off_vibration"
        android:textAppearance="@style/SwitchTextAppearance" />

    <include
        android:layout_height="54dp"
        layout="@layout/buttons_cancel_ok"
        android:gravity="bottom" />

</LinearLayout>